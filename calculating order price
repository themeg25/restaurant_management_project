def calculate_order_total(order_items):
    """
        Calculate the total price of an order.

            Args:
                    order_items (list): A list of dictionaries or objects,
                                                each containing 'quantity' and 'price'.
                                                                            Example: [{'quantity': 2, 'price': 10.0}, {'quantity': 1, 'price': 5.0}]

                                                                                Returns:
                                                                                        float: The total cost of the order. Returns 0.0 if the list is empty or invalid.

                                                                                            Notes:
                                                                                                    - Ensures negative prices or quantities are treated as zero to avoid incorrect totals.
                                                                                                            - Works for both list of dicts and list of objects with attributes.
                                                                                                                """

                                                                                                                    # Handle empty or invalid input gracefully
                                                                                                                        if not order_items or not isinstance(order_items, list):
                                                                                                                                return 0.0

                                                                                                                                    total = 0.0

                                                                                                                                        for item in order_items:
                                                                                                                                                # Extract quantity and price, handling both dicts and objects
                                                                                                                                                        quantity = getattr(item, 'quantity', item.get('quantity', 0)) if hasattr(item, 'quantity') or isinstance(item, dict) else 0
                                                                                                                                                                price = getattr(item, 'price', item.get('price', 0.0)) if hasattr(item, 'price') or isinstance(item, dict) else 0.0

                                                                                                                                                                        # Ensure valid non-negative numbers
                                                                                                                                                                                if quantity < 0:
                                                                                                                                                                                            quantity = 0
                                                                                                                                                                                                    if price < 0:
                                                                                                                                                                                                                price = 0.0

                                                                                                                                                                                                                        total += quantity * price

                                                                                                                                                                                                                            return round(total, 2)  # Round to 2 decimal places for currency