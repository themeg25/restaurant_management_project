from django.db import models

class MenuItem(models.Model):
    name = models.CharField(max_length=100)
        price = models.DecimalField(max_digits=8, decimal_places=2)
            is_daily_special = models.BooleanField(default=False)  # New field

                def __str__(self):
                        return self.namefrom rest_framework import serializers
                        from .models import MenuItem

                        class MenuItemSerializer(serializers.ModelSerializer):
                            class Meta:
                                    model = MenuItem
                                            fields = ['id', 'name', 'price', 'is_daily_special']from rest_framework.generics import ListAPIView
                                            from .models import MenuItem
                                            from .serializers import MenuItemSerializer

                                            class DailySpecialsAPIView(ListAPIView):
                                                serializer_class = MenuItemSerializer

                                                    def get_queryset(self):
                                                            # Filter for menu items marked as daily specials
                                                                    return MenuItem.objects.filter(is_daily_special=True)