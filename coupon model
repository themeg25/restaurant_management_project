from django.db import models
from django.utils import timezone


class Coupon(models.Model):
    code = models.CharField(max_length=50, unique=True)
        discount_percentage = models.DecimalField(max_digits=5, decimal_places=2)  # e.g., 10.00 for 10%
            is_active = models.BooleanField(default=True)
                valid_from = models.DateField()
                    valid_until = models.DateField()

                        def __str__(selfself):
                                return f"{self.code} - {self.discount_percentage}%"from rest_framework import serializers
                                from .models import Coupon


                                class CouponSerializer(serializers.ModelSerializer):
                                    class Meta:
                                            model = Coupon
                                                    fields = ['code', 'discount_percentaself