from django.db import models
from django.contrib.auth.models import User
from .models import MenuItem  # Ensure MenuItem model exists

class UserReview(models.Model):
    user = models.ForeignKey(User, on_delete=models.CASCADE, related_name='reviews')
        menu_item = models.ForeignKey(MenuItem, on_delete=models.CASCADE, related_name='reviews')
            rating = models.IntegerField()
                comment = models.TextField()
                    review_date = models.DateTimeField(auto_now_add=True)  # Optional: stores creation date

                        class Meta:
                                unique_together = ('user', 'menu_item')  # Optional: prevent duplicate reviews per user per item
                                        ordering = ['-review_date']

                                            def __str__(self):
                                                    return f"Review by {self.user.username} for {self.menu_item.name} - {self.rating}/5"